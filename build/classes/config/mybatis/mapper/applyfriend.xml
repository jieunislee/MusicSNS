<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="applyfriend">
	<select id="applyfriend_one" parameterType = "applyfriend" resultType = "applyfriend">
		select * from applyfriend where sendid = #{sendid} and receiveid = #{receiveid}
	</select>
	
	<insert id="applyfriend_insert" parameterType="applyfriend">
		insert into applyfriend values(
			applyfriend_seq.nextVal,
			#{sendid},
			#{sendname},
			#{receiveid}
			 )	 
	</insert>
	
	<select id="applyfriend_list" 
			parameterType="java.lang.String"
			resultType="applyfriend">
		select * from applyfriend where receiveid = #{receiveid}
	</select>
	
	<delete id ="applyfriend_delete" parameterType = "int">
		delete from applyfriend where idx = #{idx}
	</delete>
	
	<!-- 페이징 -->
	<select id="applyfriend_count" parameterType="java.lang.String" resultType="int">
		select count(*) from applyfriend where receiveid = #{receiveid}
	</select>
	
	<select id="applyfriend_list_page" parameterType="hashmap" resultType="applyfriend">
		<![CDATA[
			select rownum as rnum, A.*
			from ( select rownum as rnum, B.*
	       			from ( select * from applyfriend where receiveid = #{receiveid} order by idx desc ) B   
	       			where rownum <= #{endNo}
	      			) A
			where rnum >= #{startNo}
		]]>
	</select>
</mapper>












